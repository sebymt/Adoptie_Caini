@model Adoptie_Caini.Pages.Dogs.DeleteModel

@{
    ViewData["Title"] = "Stergere Caine";
}

<h3>Sunteți sigur că doriți să ștergeți acest câine?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dog.Image)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dog.Image)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dog.Country)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dog.Country)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dog.Weight)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dog.Weight)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dog.DateOfBirth)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dog.DateOfBirth)
